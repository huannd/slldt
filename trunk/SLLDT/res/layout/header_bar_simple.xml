<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/main_title_height"
    android:layout_gravity="center"
    android:background="@color/bg_header"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/main_title_height"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/back" />

    <EditText
        android:id="@+id/edtChatPhone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3.0dip"
        android:layout_toLeftOf="@+id/main_btn_switch"
        android:layout_toRightOf="@+id/btnBack"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/main_menu_title"
        android:typeface="normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3.0dip"
        android:layout_toLeftOf="@+id/main_btn_switch"
        android:layout_toRightOf="@+id/btnBack"
        android:gravity="center"
        android:text="@string/app_nameH"
        android:textColor="@android:color/white"
        android:textSize="@dimen/main_menu_title"
        android:textStyle="bold"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/main_btn_switch"
        android:layout_width="@dimen/main_title_height"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/switch_" />

</RelativeLayout>
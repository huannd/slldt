    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tracuu_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:drawableRight="@drawable/calendar"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" />

            <Button
                android:id="@+id/tracuu_reset"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5.0dip"
                android:text="Reset" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tracuu_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:drawableRight="@drawable/calendar"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" />

            <Button
                android:id="@+id/tracuu_view_date"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5.0dip"
                android:text="Xem" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_weight="0.3"
            android:background="@color/A7C9D3"
            android:gravity="center"
            android:text="STT"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_weight="0.9"
            android:background="@color/A7C9D3"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/sms_time"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:layout_weight="1.6"
            android:background="@color/A7C9D3"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:gravity="center"
                android:maxLines="3"
                android:text="@string/sms_content"
                android:textColor="@android:color/black"
                android:textSize="17.0sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/tracuu_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#ffe0e0e0"
        android:fadingEdge="none" />

</LinearLayout>